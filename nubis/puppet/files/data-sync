#!/bin/bash -l

CONFIG=/etc/nubis-config/bugzilla.sh

DATA=/data/bugzilla

# Load up $S3DataBucket
if [ -r $CONFIG ] ; then
  . $CONFIG
else
  echo "Can't find config in $CONFIG"
  exit 1
fi

find $DATA -user root -print0 | xargs -r0 chown apache

S3_SYNC="aws s3 sync \
  --no-guess-mime-type \
  --sse \
  --exclude=mod_perl_preload \
  --exclude=webdot/ \
  --delete \
  $* \
"

if /usr/local/bin/bugzilla-active; then
  # Push
  sudo -E -u apache $S3_SYNC "$DATA/" "s3://$S3DataBucket/"
else
  # Pull
  sudo -E -u apache $S3_SYNC "s3://$S3DataBucket/" "$DATA/"
fi
